<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_4">

    <ImageView
        android:id="@+id/ivMenuItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_menu_circle"
        android:padding="@dimen/space_8"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMenuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ivMenuItem"
        app:layout_constraintRight_toRightOf="@id/ivMenuItem"
        app:layout_constraintTop_toBottomOf="@+id/ivMenuItem" />

</androidx.constraintlayout.widget.ConstraintLayout>